                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Cantidad de productos -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left">

                        <TextView
                            android:id="@+id/quantityLabel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="8dp"
                            android:text="Cantidad:"
                            android:textColor="@color/black" />


                        <!-- Cantidad -->
                        <TextView
                            android:id="@+id/quantityProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <!-- Botón de aumentar cantidad -->
                        <ImageButton
                            android:id="@+id/increaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Aumentar cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/add_icon_35x35"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"/>

                        <!-- Botón de disminuir cantidad -->
                        <ImageButton
                            android:id="@+id/decreaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Disminuir cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/remove_icon_35x35"
                            android:layout_gravity="end|center"
                            android:layout_margin="3dp"/>
                    </LinearLayout>

