<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.Cart">

    <!-- Header -->
    <ImageView
        android:id="@+id/logoTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/banner" />

    <!-- Título del carrito -->
    <TextView
        android:id="@+id/cartTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Mi carrito"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Productos en carrito -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <!-- Productos -->

            <!-- Producto Camiseta Argentina 78 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <!-- Imagen del producto -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="98dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@mipmap/argentina_1978_primera" />
                </androidx.cardview.widget.CardView>

            <!-- Detalles del producto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <!-- Nombre del producto -->
                    <TextView
                        android:id="@+id/productName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="Camiseta Argentina 78"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Cantidad de productos -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left">

                        <TextView
                            android:id="@+id/quantityLabel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="8dp"
                            android:text="Cantidad:"
                            android:textColor="@color/black" />


                        <!-- Cantidad -->
                        <TextView
                            android:id="@+id/quantityProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <!-- Botón de aumentar cantidad -->
                        <ImageButton
                            android:id="@+id/increaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Aumentar cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/add_icon_35x35"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"/>

                        <!-- Botón de disminuir cantidad -->
                        <ImageButton
                            android:id="@+id/decreaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Disminuir cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/remove_icon_35x35"
                            android:layout_gravity="end|center"
                            android:layout_margin="3dp"/>
                    </LinearLayout>

                    <!-- Talle -->
                    <TextView
                        android:id="@+id/sizeProduct1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talle: S"
                        android:textColor="@color/black" />

                    <!-- Precio y delete -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Precio -->
                        <TextView
                            android:id="@+id/priceProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Precio: $50.000"
                            android:textColor="@color/black" />

                        <!-- Botón delete derecha -->
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_weight="1" />

                        <!-- Botón delete -->
                        <ImageButton
                            android:id="@+id/removeButton1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="Eliminar producto"
                            android:src="@drawable/vector_drawable" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Producto Camiseta Francia 98 -->
