                        android:textStyle="bold" />

                    <!-- Cantidad de productos -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left">

                        <TextView
                            android:id="@+id/quantityLabel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="8dp"
                            android:text="Cantidad:"
                            android:textColor="@color/black" />


                        <!-- Cantidad -->
                        <TextView
                            android:id="@+id/quantityProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/editbox_background"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <!-- Botón de aumentar cantidad -->
                        <ImageButton
                            android:id="@+id/increaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Aumentar cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/add_icon_35x35"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"/>

                        <!-- Botón de disminuir cantidad -->
                        <ImageButton
                            android:id="@+id/decreaseButton1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/circle_button"
                            android:contentDescription="Disminuir cantidad"
                            android:scaleType="centerInside"
                            android:src="@drawable/remove_icon_35x35"
                            android:layout_gravity="end|center"
                            android:layout_margin="3dp"/>
                    </LinearLayout>

                    <!-- Talle -->
                    <TextView
                        android:id="@+id/sizeProduct1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talle: S"
                        android:textColor="@color/black" />

                    <!-- Precio y delete -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Precio -->
                        <TextView
                            android:id="@+id/priceProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Precio: $20.000"
                            android:textColor="@color/black" />

                        <!-- Botón delete derecha -->
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_weight="1" />

                        <!-- Botón delete -->
                        <ImageButton
                            android:id="@+id/removeButton1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="Eliminar producto"
                            android:src="@drawable/vector_drawable" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Producto Camiseta Brasil 2002 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <!-- Imagen del producto -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
