                    <TextView
                        android:id="@+id/sizeProduct1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talle: S"
                        android:textColor="@color/black" />

                    <!-- Precio y delete -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Precio -->
                        <TextView
                            android:id="@+id/priceProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Precio: $45.000"
                            android:textColor="@color/black" />

                        <!-- Botón delete derecha -->
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_weight="1" />

                        <!-- Botón delete -->
                        <ImageButton
                            android:id="@+id/removeButton1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="Eliminar producto"
                            android:src="@drawable/vector_drawable" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <!-- Botón finalizar compra -->
    <Button
        android:id="@+id/endShop"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/gray_400"
        android:text="FINALIZAR COMPRA"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Nav inferior -->
    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSecondary">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/home_icon_35x35"
            android:gravity="center"
            android:text="@string/home_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/productsButton"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/shopping_bag_icon_35x35"
            android:gravity="center"
            android:text="@string/products_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/account_icon_35x35"
            android:gravity="center"
            android:text="@string/account_button"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
