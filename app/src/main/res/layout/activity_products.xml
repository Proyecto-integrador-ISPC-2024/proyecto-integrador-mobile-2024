<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    >

    <!-- Main Content (Your original layout) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Superior View with Logo -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_background"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/logo_activities"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

        <!-- Superior Navbar -->
        <LinearLayout
            android:id="@+id/topNavbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white_background"
            android:padding="10dp"
            android:layout_below="@+id/headerLayout"> <!-- Error at this line -->

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button"
                android:textColor="@color/white_background"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/arrow_back_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_marginEnd="220dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle"
                />

            <!-- SideNav Trigger Button -->
            <Button
                android:id="@+id/sideNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_button"
                android:textColor="@color/white_background"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/menu_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Products List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/topNavbar"
            android:layout_above="@id/bottomNavbar"
            android:layout_margin="10dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"/>

        <!-- Inferior Navbar -->
        <LinearLayout
            android:id="@+id/bottomNavbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/green"
            android:padding="10dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/home_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/productsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/products_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/shopping_bag_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/account_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/account_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Navigation Drawer Menu -->
    <LinearLayout
        android:id="@+id/sideNav"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/navTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="PRODUCTOS"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp" />

            <Button
                android:id="@+id/productsButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/cartButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi carrito"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="SOBRE NOSOTROS"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/aboutUsButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conocenos"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/contactButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="MI PERFIL"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/profileButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/dashboardButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
