<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <!-- Main Content (Your original layout) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Logo -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/logo_activities"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

        <!-- Navbar superior -->
        <LinearLayout
            android:id="@+id/topNavbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_below="@+id/headerLayout">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button"
                android:textColor="@color/colorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/arrow_back_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_marginEnd="220dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle"
                />

            <Button
                android:id="@+id/sideNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/menu_button"
                android:textColor="@color/colorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/menu_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Products List and Floating Action Button Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topNavbar"
            android:layout_above="@id/bottomNavbar"
            android:padding="10dp">

            <!-- Products RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

            <!-- Floating Action Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:contentDescription="@string/drawer_btn_cart"
                android:src="@drawable/shopping_cart_icon_35x35"
                android:tint="@android:color/white"
                android:backgroundTint="@color/colorPrimary" />
        </FrameLayout>


        <!-- Navegación inferior -->
        <LinearLayout
            android:id="@+id/bottomNavbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorSecondary"
            android:padding="10dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/home_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/productsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/products_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/shopping_bag_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/account_button"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/account_icon_35x35"
                android:drawablePadding="0dp"
                android:padding="8dp"
                android:layout_gravity="center"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Drawer de navegación lateral -->
    <LinearLayout
        android:id="@+id/sideNav"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp">

        <TextView
            android:id="@+id/navTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/drawer_section_products"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp" />

            <Button
                android:id="@+id/productsButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_products"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/cartButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_cart"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/drawer_section_about"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/aboutUsButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_knowUs"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/contactButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_contact"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/drawer_section_account"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/profileButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_profile"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

            <Button
                android:id="@+id/dashboardButtonDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_btn_dashboard"
                android:background="@color/gray"
                android:textColor="@android:color/black"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
