<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

  <!-- Main Content (Your original layout) -->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <!-- Logo -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp">

      <ImageView
          android:id="@+id/logoImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@mipmap/logo_activities"
          android:contentDescription="@string/app_name" />

    </LinearLayout>

    <!-- Navbar superior -->
    <LinearLayout
        android:id="@+id/topNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_below="@+id/headerLayout">

      <Button
          android:id="@+id/backButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/back_button"
          android:textColor="@color/colorPrimary"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:drawableTop="@drawable/arrow_back_icon_35x35"
          android:drawablePadding="0dp"
          android:padding="8dp"
          android:layout_marginEnd="220dp"
          android:layout_gravity="center"
          style="?android:attr/buttonBarButtonStyle"
          />

      <Button
          android:id="@+id/sideNavButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/menu_button"
          android:textColor="@color/colorPrimary"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:drawableTop="@drawable/menu_icon_35x35"
          android:drawablePadding="0dp"
          android:padding="8dp"
          android:layout_gravity="center"
          style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <!-- Conocenos -->
    <TextView
        android:id="@+id/aboutUsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Conocenos! "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/topNavbar"
        android:layout_margin="16dp"
        android:gravity="left" />

    <!-- Mapa  -->
    <WebView
        android:id="@+id/mapWebView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/aboutUsTextView"
        android:layout_margin="16dp" />


    <!-- Botón para Contacto -->
    <Button
        android:id="@+id/contactButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacto"
        android:layout_below="@id/mapWebView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="openContactActivity" />

    <!-- Navegación inferior -->
    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorSecondary"
        android:padding="10dp"
        android:layout_alignParentBottom="true">

      <Button
          android:id="@+id/homeButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/home_button"
          android:textColor="@android:color/white"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:drawableTop="@drawable/home_icon_35x35"
          android:drawablePadding="0dp"
          android:padding="8dp"
          android:layout_gravity="center"
          style="?android:attr/buttonBarButtonStyle" />

      <Button
          android:id="@+id/productsButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/products_button"
          android:textColor="@android:color/white"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:drawableTop="@drawable/shopping_bag_icon_35x35"
          android:drawablePadding="0dp"
          android:padding="8dp"
          android:layout_gravity="center"
          style="?android:attr/buttonBarButtonStyle" />

      <Button
          android:id="@+id/profileButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/account_button"
          android:textColor="@android:color/white"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:drawableTop="@drawable/account_icon_35x35"
          android:drawablePadding="0dp"
          android:padding="8dp"
          android:layout_gravity="center"
          style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>